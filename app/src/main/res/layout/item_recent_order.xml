<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recent_order_items_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <TextView
        android:id="@+id/recent_order_restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/recent_order_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Price"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/recent_order_delivery_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery Address"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/recent_order_special_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Special Instructions"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/recent_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="16sp" />


    <android.widget.Button
        android:id="@+id/order_again_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Again" />
</LinearLayout>
